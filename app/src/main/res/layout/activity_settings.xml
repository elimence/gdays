<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.gdays.app.MainActivity$PlaceholderFragment"
    android:background="#191b1c" >

    <TextView
        android:text="PREFERENCES"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray"
        android:textSize="17sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/divider"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#FFFFFFFF" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/ic_action_reply_all"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <TextView
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:textSize="17sp"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Auto responder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <Switch
                android:id="@+id/responder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>


    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@android:drawable/divider_horizontal_dim_dark"
        android:layout_gravity="top"
        android:layout_marginTop="20dp"/>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/ic_action_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/responder_text"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:autoText="false"
            android:editable="true"
            android:enabled="true"
            android:inputType="textMultiLine"
            android:text="@string/responder_default_text"
            android:typeface="serif"
            android:textColor="#e9efff" />

        <Button
            android:id="@+id/btn_save_text"
            android:layout_gravity="bottom"
            android:text="Save edits"
            android:textColor="@android:color/white"
            android:layout_marginTop="170dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@android:drawable/divider_horizontal_dim_dark"
        android:layout_gravity="top"
        android:layout_marginTop="20dp"/>

</LinearLayout>
